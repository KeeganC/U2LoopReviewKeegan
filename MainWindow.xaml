<Window x:Class="U2LoopReviewKeegan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U2LoopReviewKeegan"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MaxHeight="350" MaxWidth="525">
    <Grid>
        <TextBox 
            x:Name="txtInput"
            HorizontalAlignment="Left" 
            Height="147" Margin="31,26,0,0" 
            TextWrapping="Wrap" 
            AcceptsReturn="True"
            Text="Input" 
            VerticalAlignment="Top" 
            Width="120"/>
        
        <Button 
            x:Name="btnGo"
            Content="Go" 
            HorizontalAlignment="Left" 
            Margin="211,26,0,0" 
            VerticalAlignment="Top" 
            Width="75"
            Click="btnGo_Click"
            />
        <Label 
            x:Name="lblOutput"
            Content="Output" 
            HorizontalAlignment="Left" 
            Margin="359,26,0,0" 
            VerticalAlignment="Top" Width="93" Height="147"/>

    </Grid>
</Window>
